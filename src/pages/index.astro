---
import Layout from "@/src/layouts/Layout.astro";

interface FeaturedItem {
  category: string;
  title: string;
  description: string;
  link: string;
}

interface BasicItem {
  title: string;
  description: string;
  link: string;
}

const featured: FeaturedItem[] = [
  {
    category: "Reference",
    title: "Data Types",
    description: "Learn about ScopeQL data types",
    link: "/reference/data-types/",
  },
  {
    category: "Reference",
    title: "Functions",
    description: "Learn about ScopeQL functions",
    link: "/reference/functions/",
  },
  {
    category: "Reference",
    title: "Query Syntax",
    description: "Learn about ScopeQL query syntax",
    link: "/reference/commands/stmt-query/",
  },
];

const basics: BasicItem[] = [];
---

<Layout title="ScopeDB Documentation">
  <div class="home-container">
    <div>
      <div>
        <div class="title">ScopeDB<br />Documentation</div>
        <div class="desc">
          Get an overview of ScopeDB's features, integrations, and how to use
          them.
        </div>
      </div>
    </div>
    <div>
      <div>
        <div class="featured-resources-title">Featured Resources</div>
        <div class="card-list">
          {
            featured.map((item) => (
              <a class="card" href={item.link}>
                <div class="featured-resources-category">{item.category}</div>
                <div class="featured-resources-title-inner">{item.title}</div>
                <div class="featured-resources-desc">{item.description}</div>
              </a>
            ))
          }
        </div>
      </div>
      {
        basics.length > 0 && (
          <div>
            <div class="basics-title">ScopeDB basics</div>
            <div class="card-list">
              {basics.map((item) => (
                <a class="card basics-card" href={item.link}>
                  <div class="basics-title-inner">{item.title}</div>
                  <div class="basics-desc">{item.description}</div>
                </a>
              ))}
            </div>
          </div>
        )
      }
    </div>
  </div>
</Layout>

<style>
  .home-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: linear-gradient(
      to bottom,
      #fbfbfb 0%,
      #ecf5fb 46%,
      #fff 46%,
      #fff 100%
    );
    max-width: 100%;
    padding: 0 100px;
  }
  @media (max-width: 900px) {
    .home-container {
      width: 100%;
      padding: 0 20px;
    }
  }
  .title {
    color: #000;
    font-size: 46px;
    font-weight: 500;
    line-height: 120%;
    margin-top: 73px;
    margin-bottom: 20px;
  }
  .desc {
    max-width: 520px;
    height: 71px;
    color: #000;
    font-size: 24px;
    font-weight: 400;
    line-height: 150%;
    margin-bottom: 73px;
  }

  .featured-resources-title {
    font-weight: 600;
    font-size: 1.125rem;
    margin-bottom: 27px;
  }
  .card-list {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-bottom: 60px;
  }
  @media (max-width: 900px) {
    .card-list {
      grid-template-columns: 1fr;
    }
  }
  .card {
    background: #fff;
    border-radius: 16px;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    text-decoration: none;
    transition: box-shadow 0.2s;
    box-shadow: 0px 5px 14px 2px #f3f3f3;
  }
  .card:hover {
    box-shadow: 0 4px 16px 0 rgba(0, 0, 0, 0.1);
  }
  .featured-resources-category {
    color: #71717a;
    font-size: 0.875rem;
    font-weight: 500;
  }
  .featured-resources-title-inner,
  .basics-title-inner {
    font-weight: bold;
    font-size: 1.125rem;
    color: #222;
  }
  .featured-resources-desc,
  .basics-desc {
    color: #71717a;
    font-size: 0.95rem;
  }
  .basics-container {
    margin-bottom: 45px;
  }
  .basics-title {
    font-weight: 600;
    font-size: 1.125rem;
    margin-bottom: 27px;
  }
  .basics-list {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }
  @media (max-width: 900px) {
    .basics-list {
      grid-template-columns: 1fr;
    }
  }
  .basics-card {
    background: #f5f5f5;
  }

  .basics-title-inner {
    font-weight: bold;
    font-size: 1.125rem;
    color: #222;
  }
  .basics-desc {
    color: #71717a;
    font-size: 0.95rem;
  }
</style>
