---
import "@/src/styles/global.css";
import "@/src/styles/markdown.css";
import type { MarkdownHeading } from "astro";
import { TOC } from "@/src/components/TOC";
import type { SidebarItem } from "@/src/libs/sidebar";
import Sidebar from "@/src/components/Sidebar/Sidebar.astro";

interface Props {
  headings: MarkdownHeading[];
  sidebar: SidebarItem[];
}

const { headings, sidebar } = Astro.props;

const toc = (headings ?? []).filter(
  (heading) => heading.depth > 1 && heading.depth <= 6,
);
---
<div class="doc-container">
  {sidebar?.length > 0 ? (
    <div class="doc-aside">
      <div class="sidebar" transition:persist>
        <Sidebar sidebar={sidebar} />
      </div>
      {toc.length > 0 ? (
        <div class="toc-container">
          <TOC toc={toc} client:only="react" />
        </div>
      ) : null}
    </div>
  ) : null}
  <div class="markdown-body">
    <slot />
  </div>
</div>
</div>

<style>
  .doc-container {
    display: grid;
    grid-template-areas: "sidebar content toc";
    grid-template-columns: minmax(0, 2fr) minmax(0, 6fr) minmax(0, 2fr);
    width: 100%;
  }
  .doc-aside {
    display: contents;
  }
  .sidebar {
    grid-area: sidebar;
    position: sticky;
    top: 0;
    padding: 0 16px;
    height: 100vh;
    overflow-y: auto;
  }
 
  .toc-container {
    grid-area: toc;
    position: sticky;
    top: 0px;
    height: 100vh;
    overflow: auto;
  }
  .content-container {
    grid-area: content;
    opacity: 1;
    transition: opacity 0.2s ease-in-out;
  }
  .content-container:global(.astro-transition-fade) {
    opacity: 0;
  }

  @media (max-width: 960px) {
    .doc-container {
      display: grid;
      grid-template-areas:
        "sidebar toc"
        "sidebar content";
      grid-template-columns: minmax(0, 1.2fr) minmax(0, 3fr);
      grid-template-rows: auto 1fr;
    }
    .content-container {
      position: unset;
    }
    .toc-container {
      height: 32px;
      overflow: hidden;
      position: sticky;
      top: 0;
      z-index: 100;
      background: #fff;
      opacity: 1;
      width: 100%;
      display: flex;
      justify-content: flex-end;
    }
  }
  @media (max-width: 480px) {
    .doc-container {
      display: flex;
      flex-direction: column;
    }
    .doc-aside {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      position: sticky;
      height: 32px;
      inset: 0;
      z-index: 100;
      opacity: 1;
      background: #fff;
      padding: 8px 16px;
    }
    .toc-container {
      position: unset;
      display: flex;
      justify-content: flex-end;
    }
    .sidebar {
      position: unset;
      height: fit-content;
      padding: 0;
    }
    .content-container {
      position: unset;
    }
  }
</style>
